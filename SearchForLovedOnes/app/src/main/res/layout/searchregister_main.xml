                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="亲逢-寻亲登记"
                    android:textSize="30sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请选择登记类型"
                    android:textSize="25sp" />
