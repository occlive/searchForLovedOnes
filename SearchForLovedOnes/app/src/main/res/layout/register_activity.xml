<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f8f8f8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.loper7.layout.TitleBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tBackgroundColor="#ff6d91"
        app:tCenterTitle="true"
        app:tTitleText="用户注册"
        app:tTitleTextBold="true"
        app:tTitleTextColor="#FFFF"
        app:tTitleTextSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_reg_username"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_selector"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_reg_pwd"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_selector"
            android:layout_marginLeft="53dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户类型:"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_familyhunter"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="寻亲者 : 家人寻找失联的亲人或自幼离家寻找亲人的请注册此会员类型" />

            <RadioButton
                android:id="@+id/rb_volunteer"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="志愿者 : 愿意帮助流浪者寻家的义工人员请注册此会员类型"
                android:layout_marginTop="10dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子邮箱:"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_reg_email"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_selector"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_reg_tel"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext_selector"
            android:layout_marginLeft="34dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证码:"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/et_checknum"
            android:layout_width="110dp"
            android:background="@drawable/bg_edittext_selector"
            android:layout_height="37dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btn_reg_sendnum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="发送验证码"
            android:onClick="buttonClicked"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/checkbox_style"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意《用户协议》和《隐私政策》"
            android:textSize="12sp"/>

    </LinearLayout>


    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_reg_regist"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:onClick="buttonClicked"
        android:text="注册"
        android:background="@drawable/rounded_edittext1"/>

</LinearLayout>