                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一.寻人信息"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/s_name"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:gravity="right"
                        android:hint="请输入姓名"
                        android:layout_marginLeft="130dp"
                        android:background="@drawable/bg_edittext_selector"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="150dp"
                        android:layout_gravity="center">
                        <RadioButton
                            android:id="@+id/s_sexwoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textSize="18sp"/>
                        <RadioButton
                            android:id="@+id/s_sexman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textSize="18sp"
                            android:layout_marginLeft="30dp"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="与该人的社会联系:"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/s_relationship"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:layout_marginTop="13dp"
                        android:hint="如朋友，恩师等"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="寻人原因及其线索资料:"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff">
                    <EditText
                        android:id="@+id/s_reason"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:paddingLeft="35dp"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:gravity="top"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="二.您的信息"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/y_name"
                        android:layout_width="150dp"
                        android:height="37dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="130dp"
                        android:gravity="right"
                        android:background="@drawable/bg_edittext_selector"
                        android:hint="请输入姓名"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/y_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="10dp">
                        <RadioButton
                            android:id="@+id/y_sexwoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textSize="18sp"/>
                        <RadioButton
                            android:id="@+id/y_sexman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textSize="18sp"
                            android:layout_marginLeft="30dp"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/y_age"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:layout_marginLeft="180dp"
                        android:hint="请输入年龄"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式:"
                        android:textSize="18sp"/>
                    <EditText
                        android:id="@+id/y_phone"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:layout_marginLeft="90dp"
                        android:gravity="right"
                        android:hint="请输入"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/phonetip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:gravity="right"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱:"
                        android:textSize="18sp"/>
                    <EditText
                        android:id="@+id/y_email"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="right"
                        android:layout_marginLeft="130dp"
                        android:hint="请输入"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/emailtip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:gravity="right"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ号:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:gravity="right"
                        android:background="@drawable/bg_edittext_selector"
                        android:layout_marginLeft="130dp"
                        android:hint="请输入"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住址:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/y_address"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="right"
                        android:layout_marginLeft="130dp"
                        android:hint="请输入"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二.上传照片"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(至少一张至多5张)"
                        android:textSize="15sp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">
                    <ImageView
                        android:id="@+id/img_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/addtip"
                        android:paddingTop="10dp"/>
                    <LinearLayout
                        android:id="@+id/addimg_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delete"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"></LinearLayout>
            </LinearLayout>


        </ScrollView>
    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_submit"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="确认登记"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@drawable/findbtncircle"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>