<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f8f8f8">
    <com.loper7.layout.TitleBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tBackgroundColor="#ff6d91"
        app:tTitleText="流浪救助"
        app:tCenterTitle="true"
        app:tTitleTextBold="true"
        app:tTitleTextColor="#FFFF"
        app:tTitleTextSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        >
        <ScrollView
            android:id="@+id/s_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一.流浪者信息"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/vagrant_name"
                        android:layout_marginLeft="130dp"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:hint="请输入姓名"
                        android:gravity="right"
                        android:layout_marginTop="13dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别:"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginLeft="130dp">
                        <RadioButton
                            android:layout_marginLeft="20dp"
                            android:id="@+id/vagrant_sexwoman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textSize="18sp"/>
                        <RadioButton
                            android:id="@+id/vagrant_sexman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textSize="18sp"
                            android:layout_marginLeft="30dp"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:background="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >
                    <TextView
                        android:layout_marginLeft="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="年龄:"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/vagrant_age"
                        android:layout_marginLeft="130dp"
                        android:layout_width="155dp"
                        android:layout_height="37dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:hint="大致年龄即可"
                        android:gravity="right"
                        android:layout_marginTop="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="开始流浪时间:"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/begintime_vagrant"
                        android:layout_marginLeft="55dp"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:layout_marginTop="13dp"
                        android:gravity="right"
                        android:hint="大致时间即可"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginLeft="20sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="目标家庭信息:"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/targetfamily_vagrant"
                        android:hint="请填写"
                        android:paddingLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="top"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="流浪者特征描述:"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/describe_vagrant"
                        android:hint="请填写"
                        android:paddingLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="top"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="发现地址:"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/findaddress"
                        android:layout_marginLeft="93dp"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="right"
                        android:hint="请填写"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="发现者联系方式:"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/phonenumber"
                        android:layout_marginLeft="37dp"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="right"
                        android:hint="请填写"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/phonetip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="right"
                    android:textColor="@color/colorAccent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二.上传照片"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(至少一张至多5张)"
                        android:textSize="15sp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">
                    <ImageView
                        android:id="@+id/img_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/addtip"
                        android:paddingTop="10dp"/>
                    <LinearLayout
                        android:id="@+id/addimg_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delete"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="30dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"></LinearLayout>



            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_submit"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="确认登记"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@drawable/findbtncircle"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>