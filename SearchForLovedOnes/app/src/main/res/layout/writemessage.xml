<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_add"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <com.loper7.layout.TitleBar
            android:id="@+id/bar"
            app:tCenterTitle="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:tBackgroundColor="#ff6d91"
            app:tTitleText="写留言"
            app:tTitleTextBold="true"
            app:tTitleTextColor="#FFFF"
            app:tTitleTextSize="19sp" />
        <TextView
            android:id="@+id/xingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:text="姓名："
            style="@style/write_text"/>
        <EditText
            android:id="@+id/ed_xingming"
            android:hint="请输入姓名"
            android:layout_below="@id/bar"
            style="@style/write_edit"
          />

        <TextView
            android:id="@+id/dianhua"
            android:text="电话："
            android:layout_below="@+id/xingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/write_text"/>
        <EditText
            android:id="@+id/ed_dianhua"
            android:hint="请输入电话"
            style="@style/write_edit"
            android:layout_below="@+id/ed_xingming"
      />
        <TextView
            android:id="@+id/QQ"
            android:text="QQ："
            android:layout_below="@+id/dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/write_text"/>
        <EditText
            android:id="@+id/ed_QQ"
            android:hint="请输入QQ"
            style="@style/write_edit"
            android:layout_below="@+id/ed_dianhua"
            />

        <TextView
            android:id="@+id/dianziyoujian"
            android:text="电子邮件："
            android:layout_below="@+id/QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/write_text"/>
        <EditText
            android:id="@+id/ed_dianziyoujian"
            android:hint="请输入电子邮件"
            android:layout_below="@+id/ed_QQ"
            style="@style/write_edit"
            />

        <EditText
            android:id="@+id/ed_liuyan"
            android:hint="请输入留言内容"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="10dp"
            android:minLines="1"
            android:maxLines="15"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/dianziyoujian"
            android:background="@drawable/shape"
            />
        <Button
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/ed_liuyan"
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="发表"
            android:textSize="14dp"
            android:background="@drawable/shape"
            />

    </RelativeLayout>
</RelativeLayout>